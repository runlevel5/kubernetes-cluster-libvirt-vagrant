{
  "builders": [
    {
      "boot_command": [
        "<wait>",
        "c<enter>",
        "linux /linux",
        " auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US.UTF-8",
        " fb=false",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US.UTF-8",
        " netcfg/get_hostname=unassigned-hostname",
        " netcfg/get_domain=unassigned-domain",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-18.04/preseed-aarch64.cfg<wait>",
        " ---",
        "<enter><wait>",
        "initrd /initrd.gz",
        "<enter><wait>",
        "boot<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": "10G",
      "http_directory": "http",
      "iso_checksum": "8eb3c1866ca3b68e4cd22ec9d7c02f97f4d2b3713447370f3c252a4189116824",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/18.04/release/ubuntu-18.04.4-server-arm64.iso",
      "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ],
        [ "-machine", "virt,gic-version=3,accel=kvm" ],
        [ "-cpu", "host" ],
        [ "-boot", "strict=on" ],
        [ "-bios", "/usr/share/AAVMF/AAVMF_CODE.fd" ],
        [ "-monitor", "none" ]
      ],
      "qemu_binary": "qemu-system-aarch64",
      "machine_type": "pseries",
      "ssh_password": "ubuntu",
      "ssh_port": 22,
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-ubuntu-18.04-k8s-aarch64"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/update.sh",
        "scripts/ubuntu/networking.sh",
        "scripts/common/sshd.sh",
        "scripts/ubuntu/sudoers.sh",
        "scripts/ubuntu/k8s.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://cdimage.ubuntu.com"
  },
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "box/ubuntu-1804-k8s-aarch64.box",
      "type": "vagrant"
    }
  ]
}
