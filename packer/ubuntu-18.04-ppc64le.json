{
  "builders": [
    {
      "boot_command": [
        "<wait>",
        "c<enter>",
        "linux /install/vmlinux",
        " auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US.UTF-8",
        " fb=false",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US.UTF-8",
        " netcfg/get_hostname=unassigned-hostname",
        " netcfg/get_domain=unassigned-domain",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-18.04/preseed-ppc64.cfg<wait>",
        " ---",
        "<enter><wait>",
        "initrd /install/initrd.gz",
        "<enter><wait>",
        "boot<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": "10G",
      "http_directory": "http",
      "iso_checksum": "8de9bbc30ab843d23c064d72fa24c003b8e90d0b01c35be7d4f49c2bf8d92ba3",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/18.04/release/ubuntu-18.04.4-server-ppc64el.iso",
      "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "qemu-system-ppc64",
      "machine_type": "pseries",
      "ssh_password": "ubuntu",
      "ssh_port": 22,
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-ubuntu-18.04-ppc64le"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/update.sh",
        "scripts/ubuntu/networking.sh",
        "scripts/common/sshd.sh",
        "scripts/ubuntu/sudoers.sh",
        "scripts/ubuntu/k8s.sh",
        "scripts/ubuntu/ppc.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://cdimage.ubuntu.com",
    "image_name": "Ubuntu 18.04 LE"
  },
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "box/ubuntu-1804-ppc64le.box",
      "type": "vagrant"
    }
  ]
}
